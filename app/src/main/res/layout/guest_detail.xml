<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable name="viewModel" type="bb.incognito.viewModel.GuestDetailVM" />
        <variable name="cocktailViewModel" type="bb.incognito.viewModel.CocktailRowVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout"
        android:gravity="right">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:weightSum="1"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:id="@+id/not"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.75">

                <android.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:layout_below="@+id/appBarLayout">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addCocktailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="26dp"
            android:layout_marginEnd="22dp"
            android:clickable="true"
            android:onClick="@{viewModel::onClick}"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_add_white_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_grey_200"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_card_gutter"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/material_card_title_block_large_padding_top"
                    android:paddingBottom="@dimen/material_card_title_block_large_padding_bottom"
                    android:paddingHorizontal="@dimen/material_card_title_block_padding_horizontal"

                    >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@{viewModel.name}"
                        android:textSize="@dimen/material_card_title_block_large_title_text_size" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@{@string/discount(viewModel.discount)}"
                        android:textSize="@dimen/material_card_title_block_subtitle_text_size" />

                    <TextView
                        android:id="@+id/notes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="notes"
                        android:text="@{viewModel.notes}"
                        android:paddingTop="@dimen/material_card_supporting_text_padding_top"
                        android:paddingBottom="@dimen/material_card_supporting_text_padding_bottom"
                        android:paddingHorizontal="@dimen/material_card_supporting_text_padding_horizontal"
                        android:textSize="@dimen/material_card_supporting_text_text_size" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:descendantFocusability="beforeDescendants"
                tools:listitem="@layout/cocktail_row">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</layout>
