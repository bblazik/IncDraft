<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.CocktailDetail">

    <data>
        <import type="android.view.View" />
        <variable name="vm" type="com.koktajlbar.incognitobook.viewModel.CocktailRowVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_grey_200"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/material_card_gutter"
            android:layout_marginLeft="@dimen/material_card_gutter"
            android:layout_marginRight="@dimen/material_card_gutter"
            android:layout_marginTop="@dimen/material_card_gutter"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.name}" />

                <TextView
                    android:id="@+id/ing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.ingredients}" />

                <TextView
                    android:id="@+id/glass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.glassware}" />

                <TextView
                    android:id="@+id/technique"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.technique}" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vm.signature}" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>