<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <import type="android.view.ViewGroup.LayoutParams" />
        <variable name="viewModel" type="com.koktajlbar.incognitobook.viewModel.CocktailRowVM" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cocktail_row"
        android:layout_width="match_parent"
        android:minHeight="@dimen/material_list_two_line_normal_height"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
        android:layout_marginEnd="@dimen/material_list_text_last_position_margin_end"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:onClick="@{viewModel::onItemClick}"
        android:onLongClick="@{viewModel::onLongClick}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
                android:layout_marginEnd="@dimen/material_list_text_last_position_margin_end"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cocktailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@{viewModel.name}"
                    android:textSize="@dimen/material_grid_list_header_footer_title_text_size_standard"
                    android:layout_marginBottom="@dimen/material_card_divider_inset_padding_horizontal"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"
                    android:text="@string/category" />

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/material_card_divider_inset_padding_horizontal"
                    android:text="@{viewModel.category}"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"/>

                <TextView
                    android:id="@+id/categoryLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"
                    android:text="@string/ingredients" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/ing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/material_card_divider_inset_padding_horizontal"
                    android:text="@{viewModel.ingredients}"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"
                    android:text="@string/glass" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/glass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/material_card_divider_inset_padding_horizontal"
                    android:text="@{viewModel.glassware}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"
                    android:text="@string/technique" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:background="?android:attr/listDivider"
                    />

                <!--to concat string use ``-->

                <TextView
                    android:id="@+id/technique"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/material_card_divider_inset_padding_horizontal"
                    android:text="@{viewModel.technique}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"
                    android:text="@string/garnish" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"
                    android:background="?android:attr/listDivider"
                    />

                <TextView
                    android:id="@+id/garnish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/material_card_divider_inset_padding_horizontal"
                    android:text="@{viewModel.garnish}"
                    android:textSize="@dimen/material_list_normal_primary_text_size"
                    android:visibility="@{viewModel.extended? View.VISIBLE: View.GONE}"/>

                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/youtube_player_view"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:videoId="@{viewModel.getYoutubeVideoId}"
                    app:autoPlay="false"
                    app:showFullScreenButton="true"
                    />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:visibility="gone" />

    </android.support.v7.widget.CardView>

</layout>